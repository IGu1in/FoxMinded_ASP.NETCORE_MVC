@model IEnumerable<WebApplication.Models.Group>

@{
    ViewBag.Title = "Groups";
}

<h2>Groups</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGroup", new { id = item.GroupId }) |
                @Html.ActionLink("Details", "DetailsGroup", new { id = item.GroupId, name = item.Name }) |
                @Html.ActionLink("Delete", "DeleteGroup", new { id = item.GroupId })
            </td>
        </tr>
    }

</table>

